<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zillion.nabeel.postandcommenttutorial.ui.activities.inbox">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="16dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Type New message"
            android:textColor="@color/com_facebook_blue"
            android:id="@+id/newMessageInbox"
            android:gravity="right"
            android:layout_weight="50"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inbox_rv"
        android:layout_below="@+id/newMessageInbox"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_new_messages"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:id="@+id/no_new_msg"
        android:visibility="gone"
        />

</LinearLayout>
