<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_answer_owner_display"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/facebook" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_username_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_time_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="10h30" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/ic_edit_black_24dp"
            android:id="@+id/edit_answer_iv"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="3"
            android:text=""
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="right"
            android:id="@+id/readmore_relLayout_answersactivity"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Readmore"
                android:textColor="@color/com_facebook_blue"
                />

        </RelativeLayout>


        <ImageView
            android:id="@+id/fab_answer"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:clickable="true"
            android:layout_marginLeft="-6dp"
            app:srcCompat="@drawable/ic_play_arrow_black_24dp" />

        <ImageView
            android:id="@+id/iv_answer_ref_display"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/placeholder"
            android:maxHeight="200dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/edittext_layout"
            android:visibility="gone"
            >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edittext_answer"
                android:layout_weight="0.8"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:layout_weight="0.2"
                android:id="@+id/done_textview"
                android:gravity="center_horizontal"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/like_layout_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        >

        <!--<ImageView-->
        <!--android:id="@+id/iv_like_answer"-->
        <!--android:layout_width="20dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:src="@drawable/ic_thumb_up_black_24dp"-->
        <!--/>-->

        <TextView
            android:id="@+id/iv_like_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upvote"
            />

        <TextView
            android:id="@+id/tv_likes_answer"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:text="0"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>