<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainRel_layout"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/post_Answer_cross_iv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/postquestiontv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:layout_weight="0.5"
                android:text="Post Answer"
                />

            <TextView
                android:id="@+id/post_answer_submit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:gravity="right"
                android:padding="5dp"
                android:textSize="18sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainRel_layout"
            android:gravity="center"
            android:id="@+id/post_answer_linearLayout"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/post_ansswer_question_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write your answer..."
                android:textColor="@color/colorAccent"
                android:textSize="18dp"
                android:paddingTop="5dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/audiotxt_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/post_answer_linearLayout"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_layout_for_refre_image_iv"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/post_answer_linearLayout"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/postanswer_reference_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="200dp" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:id="@+id/select_image_mic_layout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/post_Answer_select_imageview"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_add_a_photo_black_24dp"
                    android:layout_gravity="center_vertical"

                    />

                <ImageView
                    android:id="@+id/postanswer_mic_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_mic_black_24dp"
                    android:layout_gravity="bottom"
                    />

            </LinearLayout>

        <SeekBar
            android:id="@+id/post_answer_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/postanswer_record_layout"
            android:visibility="gone"
             />

        <LinearLayout
            android:id="@+id/postanswer_record_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_above="@+id/select_image_mic_layout"
            >

            <!--<Button
                android:id="@+id/post_answer_record"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Record" />-->

            <ImageView
                android:id="@+id/post_answer_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/voice_recorder"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:text="Record" />

            <!--<Button
                android:id="@+id/post_answer_stop"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Stop" />-->

            <ImageView
                android:id="@+id/post_answer_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:src="@drawable/stop_record"
                android:text="Stop" />

            <!--<Button
                android:id="@+id/post_answer_play"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Play" />-->

            <ImageView
                android:id="@+id/post_answer_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                android:src="@drawable/play_audio"
                android:text="Play" />

            <!--<Button
                android:id="@+id/post_answer_okay"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Ok" />-->

            <ImageView
                android:id="@+id/post_answer_okay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                android:src="@drawable/done_record"
                android:text="Ok" />

            <!--<Button
                android:id="@+id/post_answer_cancel"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Cancel" />-->

            <ImageView
                android:id="@+id/post_answer_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                android:src="@drawable/cancel_record"
                android:text="Cancel" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>